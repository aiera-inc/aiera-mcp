# Aiera MCP Configuration
# Copy this file to .env and update with your values

# API Configuration
# Base URL for Aiera API
AIERA_BASE_URL=https://premium.aiera.com/api

# Your Aiera API key (required)
AIERA_API_KEY=your-api-key-here

# Pagination Configuration
# Default number of items per page
DEFAULT_PAGE_SIZE=50
# Maximum allowed page size
DEFAULT_MAX_PAGE_SIZE=100

# HTTP Client Configuration
# Request timeout in seconds
HTTP_TIMEOUT=30.0
# Maximum number of keepalive connections
HTTP_MAX_KEEPALIVE_CONNECTIONS=10
# Maximum total connections
HTTP_MAX_CONNECTIONS=20
# Keepalive expiry time in seconds
HTTP_KEEPALIVE_EXPIRY=30.0

# Logging Configuration
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
